      <div class="img-tagg"><%= image_tag done.tarea.image.url if done.tarea.image? %></div>
      <div class="card-body">
        <h5 class="card-title"><%= done.tarea.title %></h5>
        <p class="card-text" style="font-size: 12px; opacity: .6;"><%= done.tarea.created_at %></p>
