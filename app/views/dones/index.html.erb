        <button class="btn btn-danger"><%= link_to "No completar", done_path(done), :method => :put, :style => "color: white;"  %></button>
        <i class="fas  btn fa-check-circle" style="color: green;"></i>
        <% else %>
        <button class="btn btn-primary"><%= link_to "Completar", done_path(done), :method => :put, :style => "color: white;" %></button>
        <i class="far  btn fa-check-circle"><%= link_to "", done_path(done), :method => :put %></i>
        <% end %>
